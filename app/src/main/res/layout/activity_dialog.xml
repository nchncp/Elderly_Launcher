<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:background="#cdcdcd"
    android:gravity="center"
    tools:context="com.launcher.elderlylauncher.DialogActivity">

    <TextView
        android:id="@+id/noti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="25sp"
        android:text="@string/topic"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#212121"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/noti_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noti_title"
        android:layout_centerHorizontal="true"
        android:padding="25sp"
        android:text="@string/sms_detail"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#212121"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/noti_detail"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnPeply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/reply" />

        <Button
            android:id="@+id/btnOkay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/okay" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/cancel" />


    </LinearLayout>

</RelativeLayout>
